{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": false,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "target": "es6",
    "sourceMap": true
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "test/acceptance"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
